<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
       <service id="sonata.admin.tag" class="CasavanaCO\BDBundle\Admin\ProductoAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Productos" label="Producto"/>
          <argument />
          <argument>CasavanaCO\BDBundle\Entity\Producto</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>CasavanaCOBDBundle</argument>
          </call>
      </service>
   </services>
</container>